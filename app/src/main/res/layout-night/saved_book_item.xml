<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/savedBookItemImageCoverTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/savedBookItemTitleTV"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.example.eteslibauthproto.utils.ETESLibTextView
            android:id="@+id/savedBookItemTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/atomic_tangerine"
            android:layout_marginTop="10dp"
            tools:text="Books title"
            app:font_name="josefinSansSemiBoldItalic"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/savedBookItemAuthorTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <com.example.eteslibauthproto.utils.ETESLibTextView
            android:id="@+id/savedBookItemAuthorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Authors name"
            android:textSize="11sp"
            app:font_name="josefinSansItalic"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>