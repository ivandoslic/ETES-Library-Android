<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp" >

    <ImageView
        android:id="@+id/bookSearchItemIV"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.example.eteslibauthproto.utils.ETESLibTextView
        android:id="@+id/bookSearchItemTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title"
        app:font_name="josefinSansSemiBold"
        android:textColor="@color/white_high_emphasis"
        app:layout_constraintLeft_toRightOf="@id/bookSearchItemIV"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="22sp" />

    <com.example.eteslibauthproto.utils.ETESLibTextView
        android:id="@+id/bookSearchItemAuthorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="author"
        app:font_name="josefinSansSemiBold"
        android:textColor="@color/white_medium_emphasis"
        app:layout_constraintLeft_toRightOf="@id/bookSearchItemIV"
        app:layout_constraintTop_toBottomOf="@id/bookSearchItemTitleTV"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>